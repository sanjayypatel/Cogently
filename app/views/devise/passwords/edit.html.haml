.content-header Change your password
= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
  = devise_error_messages!
  = f.hidden_field :reset_password_token
  .form-section
    = f.label :password, "New password"
    %br/
    = f.password_field :password, class: 'enter-text', autofocus: true, autocomplete: "off"
  .form-section
    = f.label :password_confirmation, "Confirm new password"
    %br/
    = f.password_field :password_confirmation, class: 'enter-text', autocomplete: "off"
  .form-section
    = f.submit "Change my password", class: 'submit-form'
= render "devise/shared/links"

.content-header Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .form-section
    = f.label :name
    = f.text_field :name, autofocus: true, class: 'enter-text'
  .form-section
    = f.label :email
    %br/
    = f.email_field :email, class: 'enter-text', autofocus: true
  .form-section
    = f.label :password
    - if @validatable
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, class: 'enter-text', autocomplete: "off"
  .form-section
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, class: 'enter-text', autocomplete: "off"
  .form-section
    = f.submit "Sign up", class: 'submit-form'
= render "devise/shared/links"

.centered-content
  .content-header Log in
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-section
      = f.label :email
      %br/
      = f.email_field :email, class: 'enter-text', autofocus: true
    .form-section
      = f.label :password
      %br/
      = f.password_field :password, class: 'enter-text', autocomplete: "off"
    - if devise_mapping.rememberable?
      .form-section
        = f.check_box :remember_me
        = f.label :remember_me
    .form-section
      = f.submit "Log in", class: 'submit-form'
  = render "devise/shared/links"
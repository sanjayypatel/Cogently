.main-content
  .content-header Edit Document Info
  = form_for [@organization, @document] do |f|
    .form-section
      = f.label :name
      = f.text_field :name, class: 'enter-text'
    .form-section
      = f.label :tag_list, "Tags (separated by commas)"
      = f.text_field :tag_list, class: 'form-control', autocomplete: :off, value: @document.all_tags_list.join(', ')
    .form-seciton
      = f.hidden_field :organization_id, value: current_user.organization.id
      = f.hidden_field :user_id, value: current_user.id
      = f.submit 'Save', class: 'submit-form'
  .content-header Summary
  = render partial: 'summaries/form', locals: {document: @document, summary: @summary}
.sidebar
  = render partial: 'users/info', locals: {user: current_user}
  = render partial: 'users/options', locals: {user: current_user}
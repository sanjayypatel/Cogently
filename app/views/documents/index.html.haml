.main-content
  .content-title Documents
  .every-other
    - @documents.each do |document|
      = render partial: 'documents/panel', locals: {document: document}
.sidebar
  .sidebar-section
    .sidebar-title Search Documents
    = form_tag organization_documents_path(@organization), method: "get" do
      .form-section
        = text_field_tag :search, params[:search], class: 'enter-text', placeholder: 'Search for documents'
      .form-section
        = submit_tag "Search", class: 'submit-form'
  = render partial: 'users/info', locals: {user: current_user}
  = render partial: 'users/options', locals: {user: current_user}
.main-content
  - if @membership && !@membership.confirmed
    = render partial: 'memberships/notice', locals: {membership: @membership}
  .content-header
    = @organization.name
  .content-subheader Moderator:
  = @moderator.name
  .content-header Members
  %ul
  -@members.each do |member|
    %li= "#{member.name}, #{member.email}"
.sidebar
  = link_to "Edit Organization", edit_organization_path(@organization), class: 'edit-record'
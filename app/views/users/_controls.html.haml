.control-bar
  .control-bar-toolbar
    .control-bar-button-group
      - if user.is_confirmed_member?
        = link_to new_organization_document_path(user.organization), class: 'button-styles' do
          = fa_icon "file-pdf-o"
          New Doc
        = link_to new_organization_event_path(user.organization), class: 'button-styles' do
          = fa_icon "calendar-plus-o"
          New Event
      = link_to user_path(user), class: 'button-styles' do
        = fa_icon "home"
        Home
      - if user.is_confirmed_member?
        = link_to organization_documents_path(user.organization), class: 'button-styles' do
          = fa_icon "files-o"
          Docs
        = link_to organization_events_path(user.organization), class: 'button-styles' do
          = fa_icon "calendar"
          Calendar
        = link_to user_feeds_path(user), class: 'button-styles' do
          = fa_icon "heart"
          Topics
      - else
        = link_to new_organization_path, class: 'button-styles-new' do
          = fa_icon "users"
          Create a new organization
  .control-bar-search
    - if user.is_confirmed_member?
      = form_tag organization_documents_path(user.organization), method: "get" do
        .input-group.input-group-md
          %input.enter-text#search{:placeholder => "Search documents...", :type => "text", :name => "search"}
          %span.input-group-btn
            %button.btn.btn.default{:type => "submit"}
              = fa_icon "search"

.main-content
  - if current_user.has_pending_invitation?
    = render partial: 'organizations/notice', locals: {membership: @membership, invited_organization: @invited_organization }
  .content-title= "#{current_user.name}'s Profile"
  .profile-section
    - if @organization
      .content-header= "Member of #{@organization.name}"
      - if policy(@organization).edit?
        = link_to "Edit Organization", edit_organization_path(@organization), class: 'edit-record'
      = link_to "View Organization", organization_path(@organization), class: 'submit-form'
  .profile-section
    .content-header= "Email"
    .content-subheader= current_user.email
.sidebar
  - if policy(current_user).edit?
    =link_to "Edit Profile", edit_user_registration_path(current_user), class: 'edit-record'